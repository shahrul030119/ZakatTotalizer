<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when EditText is focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#2A282C" /> <!-- dark grey border -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- State when EditText is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#2A282C" /> <!-- dark grey border -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default (normal) state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#D3D3D3" /> <!-- Light gray border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
