<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6D6C5"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="136dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:contentDescription="App Logo"
            android:src="@drawable/zakat" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="About Us"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/monumentextended_regular"/>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_picture" />

        <!-- About Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Name: Muhammad Shahrul Nizam Bin Zahari"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/sfproregular"/>

            <!-- Class -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Class: D1CDCS2405B"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/sfproregular"/>

            <!-- Gender -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Gender: Male"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/sfproregular"/>

            <!-- Phone Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Phone Number: 0178289069"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/sfproregular"/>

        </LinearLayout>

        <!-- GitHub Link -->
        <TextView
            android:id="@+id/githubLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:text="GitHub: https://github.com/shahrul030119/ZakatTotalizer.git"
            android:textColor="#1D2C1E"
            android:textSize="18sp"
            android:fontFamily="@font/sfproregular"/>

        <!-- Copyright -->
        <TextView
            android:id="@+id/copyrightInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Copyright Â© 2024 Zakat Totalizer App"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/sfpromedium"/>
    </LinearLayout>
</LinearLayout>